{
  "version": 2,
  "builds": [
    {
      "src": "cyber-shield/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/cyber-shield/build/$1"
    }
  ],
  "functions": {
    "api/*.ts": {
      "maxDuration": 30
    }
  }
}